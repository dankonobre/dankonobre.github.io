{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "outDir": "dist",
    "module": "ES2022",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "astro/client",
      "vite/client",
    ],
    "baseUrl": ".",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ],
    "paths": {
      "@*": [
        "src/*"
      ],
    },
  },
  "include": [
    "src",
    "*.astro",
    "*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}