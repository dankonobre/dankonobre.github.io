{
  "customSyntax": "postcss-scss",
  "extends": ["stylelint-config-standard", "stylelint-prettier"],
  "plugins": ["stylelint-scss", "stylelint-prettier"],
  "no-invalid-position-at-import-rule": false,
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "each",
          "else",
          "if",
          "responsive",
          "screen",
          "tailwind",
          "variants"
        ]
      }
    ],
    "no-descending-specificity": null
  }
}
