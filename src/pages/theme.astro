---
import Layout from '@layouts/PageLayout.astro';
import Section from '@components/Section.astro';
import FilledCircles from '@components/ThemeExample/FilledCircles.astro';
import ColorPalettes from '@components/ThemeExample/ColorPalettes.astro';
---

<Layout>
  <Section>
    <div class="space-y-4 rounded-lg border-t-primary shadow-red-500 caret-red-500 p-4 bg-surface-100">
      <section class="space-y-4">
        <h2 class="text-on-surface-100">Color Palettes</h2>
        <div class="space-y-4 px-4">
          <ColorPalettes />
        </div>
      </section>

      <hr />

      <section class="space-y-4">
        <h2 class="text-on-surface-100">Filled Circles</h2>
        <div class="space-y-4 px-4">
          <FilledCircles />
        </div>
      </section>
    </div>
  </Section>
</Layout>
