---
type Props = {
  titleColor?: string;
};

const { titleColor = 'text-on-surface-50' } = Astro.props;
const placeholder = 'This is a text on default color';

const text = {
  on50: '-on 50',
  on100: '-on 100',
  on200: '-on 200',
  on300: '-on 300',
  on400: '-on 400',
  on500: '-on 500',
  on600: '-on 600',
  on700: '-on 700',
  on800: '-on 800',
  on900: '-on 900',
